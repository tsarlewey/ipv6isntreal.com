---
interface Props {
  title?: string;
}

const { title = "IPv6 Isn't Real" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class="logo">IPv6 ISN'T REAL</a>
        <span class="tagline">Wake up, sheeple.</span>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <p>They don't want you to know the truth about IPv6.</p>
    </footer>
  </body>
</html>
